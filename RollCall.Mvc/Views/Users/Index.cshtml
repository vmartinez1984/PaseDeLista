@model IEnumerable<RollCall.Dto.UserDto>

@{
    ViewData["Title"] = "Usuarios";
}

@if (ViewBag.IsMaximum)
{
    <p class="text-warning">
        Ha alcanzado su limite máximo de usuarios, contacte a su ejecutivo de cuenta.
    </p>
}
else
{
    <p>
        <a asp-action="Create" class="text-success">
            <i class="fa fa-plus-circle"></i>
            Agregar nuevo
        </a>
    </p>
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Lista de usuarios</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Rol.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LastName)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Rol.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                <a href="Users/Edit/@item.Id" class="text-warning">
                                    <i class="fa fa-edit"></i>
                                    Editar
                                </a>
                                @if (Model.Count() != 1)
                                {
                                    <span>|</span>
                                    <a href="Users/Delete/@item.Id" class="text-danger">
                                        <i class="fa fa-eraser"></i>
                                        Borrar
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>