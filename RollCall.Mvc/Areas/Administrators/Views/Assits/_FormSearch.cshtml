@model RollCall.Dto.SearchAssistenceDto

<div class="card">
    <div class="card-header">
        <h4>Buscar</h4>
    </div>
    <div class="card-body">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="NumberEmployee" class="control-label"></label>
                        <input asp-for="NumberEmployee" class="form-control" />
                        <span asp-validation-for="NumberEmployee" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="AreaId" class="control-label"></label>
                        <select asp-for="AreaId" class="form-control" asp-items="@(new SelectList(ViewBag.ListAreas,"Id","Name"))">
                            <option>Seleccione</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ScheduleId" class="control-label"></label>
                        <select asp-for="ScheduleId" class="form-control" asp-items="@(new SelectList(ViewBag.ListSchedules,"Id","Schedule"))">
                            <option>Seleccione</option>
                        </select>
                        <span asp-validation-for="ScheduleId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="DateStart" class="control-label"></label>
                        <input asp-for="DateStart" class="form-control" />
                        <span asp-validation-for="DateStart" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="DateStop" class="control-label"></label>
                        <input asp-for="DateStop" class="form-control" />
                        <span asp-validation-for="DateStop" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6"></div>
                <div class="col-md-6">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            Buscar
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>